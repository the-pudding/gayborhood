.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	.hed-container
		max-width 50rem
		margin 4rem auto 0 auto

	&__hed
		max-width 60rem
		margin 0 auto 2rem auto
		padding-top 1rem
		font-weight 200
		text-align center
		set-type-size('x-large', true)
		+mq('bp-3')
			set-type-size('xx-large', true)
		+mq('bp-5')
			set-type-size('xxx-large', true)

	&__byline
		max-width $column-width
		margin 0 auto
		padding-top 5rem
		padding-bottom 1.5rem
		text-align center
		set-type-size('small', true)

	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)

	&__prelude
			max-width 720px
			margin 0 auto
