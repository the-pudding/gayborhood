/* CUSTOM STORY STYLE */
#scrollMap
  position absolute
	right 1rem
	top 50%
	transform translateY(-50%)

#scroll
	position relative

.scroll__graphic
	width 100%
	position sticky
	top 0
	right 0
	transform translate3d(0, 0, 0)

.scroll__text
	// position absolute
	// top 0
	// left 0
	position relative
	padding 0 1rem
	max-width 30rem
	width 33%
	// margin 0

.step-wrapper
  background-color rgba(255,255,255, 0.9)

.step
	margin 2rem auto
	opacity 0.5

.step.is-active
	opacity 1

.step p
	padding 1rem
	font-size 1.5rem
  background-color rgba(255,255,255, 0.9)

.details, .detailscont
  margin 0 auto
  max-width 720px

.dropdown-sticky
  position sticky
  top 0
  right 0
  height 3rem
  background-color rgba(255, 255, 255, 0.9)
  border-bottom 1px solid $gray-light

.dropdown-wrapper
  margin 0 auto
  max-width 720px

.city-wrapper
  margin 5rem auto 0 auto
  max-width 720px
  border-top 1px solid $gray-light

.city-hed
  margin-top 0
  float left

.us-map
  float right
  width 75px
  height 50px
  margin-top 0.25rem

.map-wrapper
  display flex
  justify-content space-between
  clear both

.mini-map-wrapper
  width 32%

.mini-map-wrapper p
    margin-top 0.5rem
    font-weight bold
    text-transform uppercase

.mini-map
    width 100%
    background-color $off-white
    height 200px

.methodology-wrapper
    margin 6rem auto 0 auto
    width 100%
    max-width 1100px
    border-top 1px solid $gray-light

.methodology
  margin 0 auto
  max-width 720px

  h3
    a
      text-decoration none
      border-bottom none

  ul
    list-style-type disc
    padding 0 3rem

  li
    margin-bottom 1.7rem

    .list-start
      font-weight bold
      text-transform uppercase
