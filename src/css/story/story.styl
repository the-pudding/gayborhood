/* CUSTOM STORY STYLE */
#scrollMap
  position absolute
	right 1rem
	top 50%
	-moz-transform translateY(-50%)
	-webkit-transform translateY(-50%)
	transform translateY(-50%)

#scroll
	position relative

.scroll__graphic
	position -webkit-sticky
  width 100%
	position sticky
	float left
	top 0
	right 0
	-webkit-transform translate3d(0, 0, 0)
	-moz-transform translate3d(0, 0, 0)
	transform translate3d(0, 0, 0)

.scroll__text
	position relative
	padding 0 1rem
	max-width 30rem
	width 33%

.step-wrapper
  background-color rgba(255,255,255, 0.9)

.step
	margin 2rem auto
  opacity 0.5

.step.is-active
	opacity 1

.step p
	text-align center
	padding 1rem
	font-size: 1.5rem

.city-wrapper
  margin 5rem auto 0 auto
  max-width 720px
  border-top 1px solid $gray-light

.city-hed
  margin-top 0
  float left

.us-map
  float right
  width 75px
  height 50px
  background-color $off-white

.map-wrapper
  display flex
  justify-content space-between
  clear both

.mini-map-wrapper
  width 32%

.mini-map-wrapper p
    margin-top 0.5rem
    font-weight bold
    text-transform uppercase

.mini-map
    width 100%
    background-color $off-white
    height 200px
