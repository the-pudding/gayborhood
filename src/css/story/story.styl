/* CUSTOM STORY STYLE */
#content
	height 950px
	&.is-truncated
		overflow hidden

#scrollMap
  position absolute
	top 50%
	transform translateY(-50%)

#scroll
	position relative

.scroll__graphic
	width 100%
	position sticky
	top 0
	right 0
	transform translate3d(0, 0, 0)

.scroll__text
	position relative
	padding 0 1rem
	max-width 30rem
	width 33%

	.step.is-active
		opacity 1

	.step
		margin 2rem auto
		opacity 0.5

		.step-wrapper
			background-color rgba(255,255,255, 0.9)

			p
				padding 1rem

				span
					text-transform uppercase
					font-family $atlas
					font-weight bold
					font-size 16px
	        line-height 1.7

.details
	margin 0 auto
	max-width 720px

#dist-chart
	width 100%

	.axis text
		font-family $atlas
		font-size 12px
		line-height 1.5
		pointer-events none
		fill $gray

  .x.axis line
		display none

	.domain
		display none

	.bgRect
		fill $off-white

	.percentline
		stroke-width 2px
		stroke #f43737
		opacity 0.2

	.g-name
		text-transform uppercase
		font-weight bold
		font-family $atlas
		font-size 14px
		line-height 1.5
		margin-bottom 0.5rem

.detailscont
	margin 0 auto
	max-width 720px

.dropdown-sticky
	position sticky
	top 2.5rem
	right 0
	height 4.5rem
	background-color rgba(255, 255, 255, 0.9)
	border-bottom 1px solid $gray-light

.dropdown-wrapper
	margin 0 auto
	max-width 720px
	padding 1rem 0

#city-select
	background-color $off-white
	border none
	cursor pointer
	height 2.5rem

.city-wrapper
	margin 5rem auto 0 auto
	max-width 720px
	border-top 1px solid $off-white

.city-hed
	margin-top 0
	float left

.us-map
	float right
	width 75px
	height 50px
	margin-top 0.25rem

.map-wrapper
	display flex
	justify-content space-between
	clear both

.mini-map-wrapper
	width 32%

	p
		margin-top 0.5rem
		font-weight bold
		text-transform uppercase

.mini-map
	width 100%
	background-color $off-white
	height 200px

.methodology-wrapper
	margin 6rem auto 0 auto
	width 100%
	max-width 1100px
	border-top 1px solid $gray-light

.methodology
	margin 0 auto
	max-width 720px

  h3 a
		text-decoration none
		border-bottom none

  ul
		list-style-type disc
		padding 0 3rem

  li
		margin-bottom 1.7rem

		.list-start
			font-weight bold
			text-transform uppercase
