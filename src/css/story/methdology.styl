.methodology-wrapper
	margin 6rem auto 0 auto
	width 100%
	max-width 1100px
	border-top 1px solid $gray-light

.methodology
	margin 0 auto
	max-width 720px

	h3 a
		text-decoration none
		border-bottom none

	ul
		list-style-type disc
		padding 0 3rem

	li
		margin-bottom 1.7rem

	.list-start
		font-weight bold
		text-transform uppercase